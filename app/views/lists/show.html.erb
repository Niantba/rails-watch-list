<div class="card-category"
  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('')"
>
 <h1><%= @list.name %></h1>
</div>

<div class="d-flex">
<% @list.movies.each do |movie| %>
<% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
<div class="card m-2" style="width: 18rem;">
  <img src="<%= movie.poster_url %>" class="card-img-top" alt="<%= movie.title %>">
  <div class="card-body">
    <h5 class="card-title"><%= movie.title %></h5>
    <p class="card-text"><%= movie.overview %></p>
    <h6 class="card-rating"><%= movie.rating %></h6>
    <p class="card-comment"><%= bookmark.comment %></p>
    <%= link_to "Delete", bookmark_path(bookmark), data: { turbo_method: :delete }%>
  </div>
</div>
<% end %>
</div>

<%= link_to "Add bookmark", new_list_bookmark_path(@list) %>


<%= link_to "Back to lists", root_path %>
